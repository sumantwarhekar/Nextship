// Firebase Storage Security Rules
// Copy these rules to your Firebase Console > Storage > Rules

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload images to their own folder
    match /uploads/{userId}/{allPaths=**} {
      allow read: if true; // Anyone can read uploaded images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // General uploads folder (simplified rule for debugging)
    match /uploads/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Temporary: Allow all authenticated users (for debugging)
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}